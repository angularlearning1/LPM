@model LPM.Web.Models.ProfileViewModel
	<container>
		<div class="row">
			<div class="col-md-12">
				<br />
			</div>
		</div>
		<div class="row">
			<div class="col-md-2 pr-1">
				<div class="form-group">
					<label>Title</label>
					<input disabled="" class="form-control" type="text" placeholder="Company" value="Mr.">
				</div>
			</div>
			<div class="col-md-10 px-1">
				<div class="form-group">
					<label>Name</label>
					<input asp-for="User.Name" placeholder="Name" class="form-control" />
				</div>
			</div>

		</div>
		<div class="row">
			<div class="col-md-6">
				<div class="form-group">
					<label for="exampleInputEmail1">Email address</label>
					<input class="form-control" asp-for="User.EmailAddress" type="email" placeholder="Email Address">
				</div>
			</div>
			<div class="col-md-6">
				<div class="form-group">
					<label>Phone Number</label>
					<input class="form-control" asp-for="User.PhoneNumber" type="text" placeholder="Phone Number">
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-6 pr-1">
				<div class="form-group">
					<label>Date Of Birth</label>
					<input class="form-control" asp-for="User.DateOfBirth" type="text" placeholder="Date Of Birth">
				</div>
			</div>
			<div class="col-md-6 px-1">
				<div class="form-group">
					<label>Gender</label>
					<div class="col-md-12">
						<input class="radio" type="radio" asp-for="User.Gender" value="1" /> Male
						<input class="radio" type="radio" asp-for="User.Gender" value="2" /> Female
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<div class="form-group">
					<label>About Me</label>
					<textarea class="form-control textarea" asp-for="UserDetail.AboutMe"></textarea>
				</div>
			</div>
		</div>
	</container>

