@model LPM.Web.Models.ProfileViewModel
	<br />
<div class="row">
	<div class="col-md-12">
		<a asp-action="Index" class="float-right" asp-controller="UserPictures">Edit Photos</a>
	</div>
</div>
<div class="row">
	@foreach (var item in Model.UserPictures)
	{
		<div class="col-md-4">
			<div class="card mb-4 shadow-sm">
				<img class="bd-placeholder-img card-img-top" src="@item.ImageProfileThumbnailPath" width="100%" height="225">
			</div>
		</div>
	}
</div>
