@model LPM.Web.Models.ProfileViewModel
<div class="row">
	<div class="col-md-4"></div>
</div>
<div class="row">
	<div class="col-md-4">
		@Html.Partial("_UserBox", Model)
	</div>
	<div class="col-md-8">
		<form method="post" asp-controller="Profile" asp-action="Edit">
			<div class="card card-user">
				<div class="card-header">
					<h5 class="card-title">Edit Profile 	<button type="submit" class="btn btn-primary float-right">Update</button></h5>
				</div>
				<div class="card-body">
					<div class="row">
						<div class="col-md-12">

							<nav>
								<div class="nav nav-tabs" id="nav-tab" role="tablist">
									<a class="nav-item nav-link active" id="nav-user-tab" data-toggle="tab" href="#nav-user" role="tab" aria-controls="nav-user" aria-selected="true">User</a>
									<a class="nav-item nav-link" id="nav-userdetail-tab" data-toggle="tab" href="#nav-userdetail" role="tab" aria-controls="nav-userdetail" aria-selected="false">User Detail</a>
									<a class="nav-item nav-link" id="nav-education-tab" data-toggle="tab" href="#nav-education" role="tab" aria-controls="nav-education" aria-selected="false">Education & Profession</a>
									<a class="nav-item nav-link" id="nav-expectations-tab" data-toggle="tab" href="#nav-expectations" role="tab" aria-controls="nav-expectations" aria-selected="false">Expectations</a>
									<a class="nav-item nav-link" id="nav-Contacts-tab" data-toggle="tab" href="#nav-Contacts" role="tab" aria-controls="nav-Contacts" aria-selected="false">Contacts</a>
									<a class="nav-item nav-link" id="nav-photos-tab" data-toggle="tab" href="#nav-photos" role="tab" aria-controls="nav-photos" aria-selected="false">Photos</a>
								</div>
							</nav>
							<div class="tab-content" id="nav-tabContent">
								<div class="tab-pane fade show active" id="nav-user" role="tabpanel" aria-labelledby="nav-user-tab">@Html.Partial("_UserEdit", Model)</div>
								<div class="tab-pane fade" id="nav-userdetail" role="tabpanel" aria-labelledby="nav-userdetail-tab">@Html.Partial("_UserDetailEdit", Model)</div>
								<div class="tab-pane fade" id="nav-education" role="tabpanel" aria-labelledby="nav-education-tab">@Html.Partial("_UserProfessionEdit", Model)</div>
								<div class="tab-pane fade" id="nav-expectations" role="tabpanel" aria-labelledby="nav-expectations-tab">@Html.Partial("_UserExpectations", Model)</div>
								<div class="tab-pane fade" id="nav-Contacts" role="tabpanel" aria-labelledby="nav-Contacts-tab">@Html.Partial("_UserContacts", Model)</div>
								<div class="tab-pane fade" id="nav-photos" role="tabpanel" aria-labelledby="nav-photos-tab">@Html.Partial("_UserPictures", Model)</div>
							</div>
						</div>
					</div>

				</div>
			</div>
		</form>
	</div>
</div>










